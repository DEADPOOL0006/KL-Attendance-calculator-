        <!-- Input Fields -->
        <label for="lectureAttendance"><strong>Lecture Attendance %:</strong></label>
        <input type="number" id="lectureAttendance" placeholder="Enter attendance for lectures" min="0" max="100">
        
        <label for="tutorialAttendance"><strong>Tutorial Attendance %:</strong></label>
        <input type="number" id="tutorialAttendance" placeholder="Enter attendance for tutorials" min="0" max="100">

        <label for="practicalAttendance"><strong>Practical Attendance %:</strong></label>
        <input type="number" id="practicalAttendance" placeholder="Enter attendance for practicals" min="0" max="100">

        <label for="seminarAttendance"><strong>Seminar Attendance %:</strong></label>
        <input type="number" id="seminarAttendance" placeholder="Enter attendance for seminars" min="0" max="100">
        
        <!-- Buttons -->
        <button class="calculate-btn" onclick="calculateAttendance()">Calculate Overall Attendance</button>
        <button class="reset-btn" onclick="resetFields()">Reset Fields</button>
        
        <p id="result"></p>
        <p id="message" class="success"></p>

        <!-- GIFs for Attendance Feedback -->
        <div class="gif-container">
            <img id="belowGif" src="https://media2.giphy.com/media/ptntNCl7nwQqk/giphy.gif?cid=6c09b9520rf2s0czmrpzvdba2dh4eewhf746rjip7dv72nf2&ep=v1_internal_gif_by_id&rid=giphy.gif&ct=g" alt="Below 85% GIF">
            <img id="aboveGif" src="https://media2.giphy.com/media/KTCh8fg6KgoLu/giphy.gif?cid=6c09b9528ced7smbty6nyacrel5me5c3ehvtcq2u1lcg3up9&ep=v1_internal_gif_by_id&rid=giphy.gif&ct=g" alt="Above 85% GIF">
        </div>
